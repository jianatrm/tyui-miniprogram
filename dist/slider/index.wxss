.ty-slider {
  position: relative;
  width: 100%;
  height: 4rpx;
  background: #ebedf0;
  border-radius: 1998rpx;
  cursor: pointer;

}
.ty-slider__bar {
  position: absolute;
  width: 100%;
  height: 100%;
  background: #1989fa;
  border-radius: inherit;
  transition: all .2s;
}
.ty-slider__button-wrapper {
  position: absolute;
  cursor: grab;
  top: 50%;
}
.ty-slider__button-wrapper--left {
  left: 0;
  transform: translate3d(-50%, -50%, 0);
}
.ty-slider__button-wrapper--right {
  right: 0;
  transform: translate3d(50%,-50%,0);
}
.ty-slider--vertical .ty-slider__button-wrapper--right {
  top: auto;
  right: 50%;
  bottom: 0;
  transform: translate3d(50%, 50%, 0);
}
.ty-slider--vertical .ty-slider__button-wrapper--left {
  top: 0;
  right: 50%;
  left: auto;
  transform: translate3d(50%, -50%, 0);
}
.ty-slider__button {
  width: 48rpx;
  height: 48rpx;
  background: #fff;
  border-radius: 50%;
  box-shadow: 0 1px 2px rgba(0, 0, 0, .5);
}

.ty-slider--vertical {
  display: inline-block;
  width: 4rpx;
  height: 100%;
}

.slot-left:empty + .ty-slider__button_left{
  display: flex;
}
.slot-right:empty + .ty-slider__button_right{
  display: flex;
}
.ty-slider__button_left,.ty-slider__button_right{
  display: none;
}